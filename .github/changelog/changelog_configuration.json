{
    "categories": [
        {
            "title": "## 🚀 Enhancements",
            "labels": [
                "enhancement"
            ]
        },
        {
            "title": "## 🔥 UI",
            "labels": [
                "ui"
            ]
        },
        {
            "title": "## 🐛 Bugs",
            "labels": [
                "bug"
            ]
        },
        {
            "title": "## 🧪 Tests",
            "labels": [
                "test"
            ]
        },
        {
            "title": "## 📖 Documentation",
            "labels": [
                "documentation"
            ]
        }
    ],
    "ignore_labels": [
        "exclude from release notes"
    ],
    "template": "${{CHANGELOG}}\n\n<details>\n<summary>Uncategorized</summary>\n\n${{UNCATEGORIZED}}\n</details>",
    "pr_template": "- PR: #${{NUMBER}} - ${{TITLE}}",
    "empty_template": "- no changes",
    "tag_resolver": {
        "method": "semver",
        "filter": {
            "pattern": "^v[0-9.]+$"
        }
    }
}
